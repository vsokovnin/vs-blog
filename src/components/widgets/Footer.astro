---
import { Icon } from 'astro-icon/components';
import { SITE } from 'astrowind:config';
import { getHomePermalink } from '~/utils/permalinks';

interface Link {
  text?: string;
  href?: string;
  ariaLabel?: string;
  icon?: string;
}

interface Links {
  title?: string;
  links: Array<Link>;
}

export interface Props {
  links: Array<Links>;
  secondaryLinks: Array<Link>;
  socialLinks: Array<Link>;
  footNote?: string;
  theme?: string;
}

const { socialLinks = [], secondaryLinks = [], links = [], footNote = '', theme = 'light' } = Astro.props;
---

<style>
  /* Фирменный темно-синий фон для footer */
  footer {
    background-color: #001f3f !important;
    border-top: none !important;
  }

  /* Белый текст для всех элементов */
  footer,
  footer div,
  footer span {
    color: #FFFFFF !important;
  }

  /* Иконки социальных сетей - белые по умолчанию */
  footer svg {
    color: #FFFFFF !important;
  }

  /* Hover для иконок: белый фон, темно-синяя иконка */
  footer a:hover {
    background-color: #FFFFFF !important;
  }

  footer a:hover svg {
    color: #001f3f !important;
  }
</style>

<footer class:list={['relative not-prose']}>
  <div class="absolute inset-0 pointer-events-none" aria-hidden="true"></div>
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 py-4">
    <div class="flex flex-col gap-1.5">
      <!-- Строка 1: Название блога -->
      <div class="font-bold text-xl">
        {SITE?.name}
      </div>

      <!-- Строка 2: Copyright (слева) + Иконки (справа) -->
      <div class="flex items-center justify-between">
        <!-- Copyright слева -->
        <div class="text-sm">
          <Fragment set:html={footNote} />
        </div>

        <!-- Иконки справа -->
        {socialLinks?.length ? (
          <ul class="flex gap-1">
            {socialLinks.map(({ ariaLabel, href, icon }) => (
              <li>
                <a
                  class="hover:bg-gray-100 rounded-lg p-1.5 inline-flex items-center transition-colors"
                  aria-label={ariaLabel}
                  href={href}
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  {icon && <Icon name={icon} class="w-5 h-5" />}
                </a>
              </li>
            ))}
          </ul>
        ) : null}
      </div>
    </div>
  </div>
</footer>
